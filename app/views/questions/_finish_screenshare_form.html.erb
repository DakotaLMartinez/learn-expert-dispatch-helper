<% if has_finished %>
  <%= form_tag question_path(question), method: 'put', remote: true, class: 'edit-finish-screenshare-form' do %>
    <%= time_field_tag 'question[new_end_share]', question.end_share.strftime('%H:%M'), class: 'h2 border-box' %>
    <%= submit_tag 'finish', class: 'dn' %>
  <% end %>
<% else %>
  <%= form_tag finish_screenshare_path(question), method: 'put', remote: true, class: 'finish-screenshare-form' do %>
    <%= time_field_tag :end_share, '', class: 'dn' %>
    <%= submit_tag 'finish', class: 'h2' %>
  <% end %>
<% end %>